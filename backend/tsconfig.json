{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings
    "module": "Node16",
    "target": "ES2020",
    "lib": ["ES2020"],
    "esModuleInterop": true,

    // Other Outputs
    "sourceMap": true,
    "declaration": true,

    // Recommended Options
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node16"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
